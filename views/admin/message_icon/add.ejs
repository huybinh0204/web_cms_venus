<% include ../index1.ejs %>
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Thêm mới nhân viên</h1>
<div class="card shadow mb-4">
    <div class="row">
        <div class="col-lg-12">
            <div class="p-5">
                <form class="user" action="/admin/message_icon/add-create/" method="post"   onsubmit="return validatedata()">
                    <div class="form-group row">
                        <div class="col-sm-2 mb-2 mb-sm-2">
                            <p>Tên :</p>
                        </div>
                        <div class="col-sm-8 mb-8 mb-sm-8">
                            <input type="text" class="form-control" name="name"
                                   placeholder="Tên">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-2 mb-2 mb-sm-2">
                            <p>Địa chỉ :</p>
                        </div>
                        <div class="col-sm-8 mb-8 mb-sm-8">
                            <input type="text" class="form-control" name="address"
                                   placeholder="địa chỉ">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-2 mb-2 mb-sm-2">
                            <p>Email :</p>
                        </div>
                        <div class="col-sm-8 mb-8 mb-sm-8">
                            <input type="email" class="form-control" name="email"
                                   placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-2 mb-2 mb-sm-2">
                            <p>Phone :</p>
                        </div>
                        <div class="col-sm-8 mb-8 mb-sm-8">
                            <input type="text" class="form-control" name="phone"
                                   placeholder="phone">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-2 mb-2 mb-sm-2">
                            <p>Ngày sinh :</p>
                        </div>
                        <div class="col-sm-8 mb-8 mb-sm-8">
                            <input type="datetime-local" class="form-control" name="dob"
                                   placeholder="Ngày sinh">
                        </div>
                    </div>

                    <div class="form-group row" >
                        <div class="col-sm-2 mb-2 mb-sm-2"></div>
                        <div class="col-sm-8 mb-8 mb-sm-8">
                            <button type="submit" class="btn btn-primary btn-user">Thêm mới</button>
                            <a href="/admin/message_icon/">
                                <button type="button" class="btn btn-success  btn-user ">Quay Lại</button>
                            </a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
