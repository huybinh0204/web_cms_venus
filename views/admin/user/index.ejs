<% include ../index1.ejs %>
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800"><%= title %></h1>
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên</th>
                    <th>SĐT</th>
                    <th>Phòng ban</th>
                    <th>Mã nhân viên</th>
                    <th>Email</th>
                    <th>Địa chỉ</th>
                    <th>Ngày sinh</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>STT</th>
                    <th>Tên</th>
                    <th>SĐT</th>
                    <th>Phòng ban</th>
                    <th>Mã nhân viên</th>
                    <th>Email</th>
                    <th>Địa chỉ</th>
                    <th>Ngày sinh</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
                </tfoot>
                <tbody>
                <% usern.forEach(function(item) { %>
                    <tr>
                        <td><%= item.id %></td>
                        <td><%= item.username %></td>
                        <td><%= item.phone %></td>
                        <td><%= item.department_id %></td>
                        <td><%= item.mnv %></td>
                        <td><%= item.email %></td>
                        <td><%= item.address %></td>
                        <td><%= item.birthday %></td>
                        <td><%= item.status %></td>
                        <form class="user" action="/admin/user/edit_create/<%= item.id %>" method="post">
                            <td>
                                <% var a = item.status %>
                                <% if (a == 1){ %>
                                    <select name="status" class="btn-success">
                                        <option value="1">Mở</option>
                                        <option value="2">Khóa</option>
                                    </select>
                                <% }else { %>
                                    <select name="status" class="btn-danger">
                                        <option value="2"><p style="background-color: #ca2819">Khóa</p></option>
                                        <option value="1">Mở</option>
                                    </select>
                                <% } %>
                            </td>
                            <td>
                                <button type="submit" class="btn btn-primary btn-user">Cập nhật</button>
                            </td>
                        </form>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<% include ../index2.ejs %>
<script>
    function confirmDelete(url, catename) {
        var conf = confirm(`Bạn có muốn cập nhật lại tài khoản? ${catename}`);
        if (conf == true) {
            window.location.href = url;
        }
    }

</script>
